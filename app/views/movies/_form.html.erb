<div class="form-horizontal">

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.label :director %>
      <%= f.text_field :director %> 
    </div>
  </div>

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.label :year %>
      <%= f.text_field :year %>    
    </div>
  </div>

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.label :description %>  
       <%= f.text_area :description, rows: 5 %>
    </div>
  </div>

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.text_field :photo %>    
    </div>
  </div>

  <div class="col-md-offset-2 col-md-8">
    <div class="form-group">
      <%= f.submit %> 
    </div>
  </div>


</div>

<% end %>
